<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_evento"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:nextFocusLeft="@id/image_cover"
        android:orientation="vertical"
        android:layout_alignTop="@+id/image_evento"
        android:layout_centerHorizontal="true">

    </LinearLayout>

    <ImageView
        android:id="@+id/petLikeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_favorite_black_24dp"
        android:tint="@color/adopt" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Nombre del evento"
        android:textStyle="bold"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toEndOf="@+id/image_evento" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:layout_toEndOf="@+id/image_evento"
        android:layout_below="@+id/text_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:  " />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="El evento será realizado en ITESM MTY" />

    </LinearLayout>
</RelativeLayout>
