<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image_news"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/image_news"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="left"
            android:maxLines="2"
            android:text="Hoy habrá un excelente día para salir a correr con tu mascota"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="Esta noticia se escribió en ITESM MTYEsta noticia se escribió en ITESM MTY" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/perrito" />

    <ImageView
        android:id="@+id/petLikeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/image_news"
        android:layout_marginTop="4dp"

        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_favorite_black_24dp"
        android:tint="@color/colorSecondary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="4dp"
        android:src="@drawable/cultura_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Movimiento Cultura de Altura, Cultura Perrona A.C."
        android:textSize="10sp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
</RelativeLayout>
